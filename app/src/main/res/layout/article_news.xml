<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/img_frame"
                android:layout_height="185dp"
                android:background="@color/gray"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView_bkg"
                    android:src="@drawable/bkg_thumb"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:id="@+id/imageView2"
                    android:src="@drawable/bkg_thumb"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    />

            </RelativeLayout>

            <TextView
                android:text="Nueva York, dividido por simpatizantes y opositores de Trump"
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/img_frame" />

            <TextView
                android:text="La Torre Trump, en Nueva York, fue punto de reuniÃ³n de manifestantes que expresaron su apoyo u odio hacia Donald Trump."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtExcerpt"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="6dp"
                android:layout_below="@+id/txtTitle"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Agosto 12, 2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTime"
                android:textSize="11dp"
                android:layout_below="@+id/txtExcerpt"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_share"
                android:layout_alignBottom="@+id/txtTime"
                android:layout_alignEnd="@+id/txtExcerpt"
                android:id="@+id/share_btn" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>