<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lisa.televisa.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/live_ad"
        android:layout_height="34dp"
        android:background="@color/yellow">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:src="@drawable/live_"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="9dp"
            android:id="@+id/logo_live" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#TemaDeVideo"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/logo_live"
            android:layout_marginStart="7dp"
            android:paddingTop="2dp"
            android:id="@+id/live_tema" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I"
            android:fontFamily="sans-serif-black"
            android:textSize="22dp"

            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/live_tema"
            android:layout_marginStart="5dp"
            android:paddingTop="2dp"
            android:id="@+id/live_sep" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elecciones EUA 2016"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/live_sep"
            android:layout_marginStart="6dp"
            android:paddingTop="2dp"
            android:id="@+id/live_text" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        card_view:cardCornerRadius="4dp"
        android:layout_below="@+id/live_ad">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                app:srcCompat="@color/blue"
                android:layout_alignParentTop="true"
                android:id="@+id/imageView2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Lorem Ipsum, usado desde el año 1500."
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/imageView2" />

            <TextView
                android:text="Lorem Ipsum, usado desde el año 1500. El pasaje estándar Lorem Ipsum, usado desde el año 1500. Lorem Ipsum, usado desde el año 1500."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtExcerpt"
                android:textColor="@color/black"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="6dp"
                android:layout_below="@+id/txtTitle"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Agosto 12, 2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTime"
                android:textSize="10dp"
                android:layout_below="@+id/txtExcerpt"
                android:layout_alignEnd="@+id/txtExcerpt"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:text="#TemaDelPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtHashtag"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:layout_marginLeft="12dp"
                android:layout_alignTop="@+id/txtTime" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
